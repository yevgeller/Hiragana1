<span class="p-2">
    <button class="btn btn-info answerButton2"
            disabled="@isDisabled"
    @onclick="Answered">
        @ButtonText
    </button>
    disabled: @isDisabled
</span>

@code {
    [Parameter]
    public bool IsCorrect { get; set; }

    private string _buttonText = "";

    [Parameter]
    public string ButtonText
    {
        get
        {
            return _buttonText;
        }
        set
        {
            this.isDisabled = false;
            _buttonText = value;

        }
    }

    [Parameter] public EventCallback OnCorrectAnswer { get; set; }
    private bool isDisabled = false;

    private async Task Answered()
    {
        isDisabled = true;
        if (IsCorrect)
            await OnCorrectAnswer.InvokeAsync();
    }
}

